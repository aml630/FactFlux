    @*<meta name="viewport" content="width=device-width; initial-scale = 1.0; maximum-scale=1.0; user-scalable=no" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
</head>
<body>

    <div class="factFluxHeader">
        <div class="headerHolder">
            <a href="~/" class="headerTitle">FactFlux <span class="headerTxt">Watch News Evolve</span></a>
            <div class="buttonGroup">
                <a href="~/about" class="headerButton">
                    About
                </a>
                <a class="headerButton" href="https://twitter.com/factflux">
                    <i class="fa fa-twitter headerTwitter" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>


    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {

        <form action="~/Word/CheckFeedsForWords">
            <button>Get New Articles</button>
        </form>
        <form action="~/Word/CutLatestArticleIntoWords">
            <button>Cut Up Article</button>
        </form>


            <a href="~/RSSfeed/index">RSS FEEDS</a>
            @Html.Partial("_LoginPartial")
    }




    <div class="mainAndSidebar">
        <div class="main">
            @RenderBody()
            <hr />
            <footer>
                @if (IsSectionDefined("AddToFooter"))
                {
                    @RenderSection("AddToFooter", required: false)
                }
            </footer>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/Timeline/Timeline.js"></script>
        </div>
        @*<div class="sideBar">

            </div>*@
    </div>
    <footer>
        <div class="layoutFooter">

            <div class="centerTwitter">
                <a href="https://twitter.com/factflux">
                    <i class="fa fa-twitter footerTwitter" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </footer>

</body>

@Html.Partial("_ShareBar")
@Html.Partial("_ShareFooter")

</html>


<style>
    .headerTwitter {
        font-size: 20px;
    }

    .buttonGroup {
        display: inline-flex;
    }

    .headerHolder {
        display: flex;
        flex-wrap: wrap;
        padding-top: 10px;
        justify-content: space-around;
    }

    .factFluxHeader {
        height: 70px;
        width: 100%;
        background-color: black;
        margin-top: -50px;
    }

    .headerButton {
        border-radius: 15px;
        text-align: center;
        margin-left: 10px;
        margin-top: 15px;
        border: 3px solid white;
        padding-top: 3px;
        width: 70px;
        height: 30px;
    }

        .headerButton:hover {
            background-color: mediumaquamarine; /* Green */
            color: white;
            transition-duration: 0.4s;
        }

    .headerSpace {
        margin-left: 50px;
    }

    .centerTwitter {
        width: 100%;
        text-align: center;
        margin-top: 20px;
        font-size: 50px;
    }

    .layoutFooter {
        background-color: black;
        height: 80px;
        color: mediumaquamarine;
    }

    .mainAndSidebar {
        display: flex;
        width: 100%;
    }

    .main {
        margin-left: 100px;
        width: 100%;
    }

    .sideBar {
        width: 200px;
        background-color: white;
        box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        border-radius: 15px;
        height: 700px;
        width: 160px;
        position: fixed;
        z-index: 1;
        top: 70px;
        right: 0;
        overflow-x: hidden;
        margin-right: 20px;
    }

        .sideBar a img {
            width: 100%;
            padding: 10px;
        }

    .centerText {
        text-align: center;
    }

    @@media screen and (max-width: 857px) {

        .sideBar {
            display: none;
        }
    }


    @@media screen and (max-width: 857px) {
        .sideBar {
            display: none;
        }
    }


    @@media screen and (max-width: 557px) {

        .sideBar {
            display: none;
        }

        html, body {
            max-width: 100% !important;
            overflow-x: hidden !important;
        }
    }

    @@media (max-width: 450px) {

        .headerTxt {
            display: none;
        }
    }
</style>